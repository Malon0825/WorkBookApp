<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="335dp"
        android:layout_height="214dp"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.106"/>

    <ImageButton
        android:id="@+id/imageButtonLessons"
        android:layout_width="159dp"
        android:layout_height="175dp"
        android:background="@drawable/button_lessons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.259" />

    <ImageButton
        android:id="@+id/imageButtonQuizzes"
        android:layout_width="159dp"
        android:layout_height="175dp"
        android:background="@drawable/button_quizzes"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonLessons"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.309"
        app:layout_constraintStart_toEndOf="@+id/imageButtonLessons"
        app:layout_constraintTop_toTopOf="@+id/imageButtonLessons"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButtonScores"
        android:layout_width="159dp"
        android:layout_height="175dp"
        android:background="@drawable/button_scores"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonLessons"
        app:layout_constraintStart_toStartOf="@+id/imageButtonLessons"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonLessons" />

    <ImageButton
        android:id="@+id/imageButtonHistory"
        android:layout_width="159dp"
        android:layout_height="175dp"
        android:background="@drawable/button_history"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonQuizzes"
        app:layout_constraintStart_toStartOf="@+id/imageButtonQuizzes"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonQuizzes" /> />

</androidx.constraintlayout.widget.ConstraintLayout>