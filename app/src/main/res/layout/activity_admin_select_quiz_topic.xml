<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/viewTExt"
        android:layout_width="341dp"
        android:layout_height="587dp"
        android:background="@drawable/layout_bg_long"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.583" />


    <ScrollView
        android:layout_width="275dp"
        android:layout_height="523dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewTExt"
        app:layout_constraintEnd_toEndOf="@+id/viewTExt"
        app:layout_constraintStart_toStartOf="@+id/viewTExt"
        app:layout_constraintTop_toTopOf="@+id/viewTExt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                    android:id="@+id/imageButtonOne"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/button_syntax_one" />

                    <ImageButton
                        android:id="@+id/imageButtonTwo"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/button_syntax_two" />

                    <ImageButton
                        android:id="@+id/imageButtonThree"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/button_syntax_three" />

                    <ImageButton
                        android:id="@+id/imageButtonFour"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/button_syntax_four" />

                    <ImageButton
                        android:id="@+id/imageButtonFive"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/button_syntax_five" />

                    <ImageButton
                        android:id="@+id/imageButtonSix"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/button_syntax_six" />

                    <ImageButton
                        android:id="@+id/imageButtonSeven"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/button_syntax_seven" />

                    <ImageButton
                        android:id="@+id/imageButtonEight"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/button_morph_one" />

                    <ImageButton
                        android:id="@+id/imageButtonNine"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/button_morph_two" />


                </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>