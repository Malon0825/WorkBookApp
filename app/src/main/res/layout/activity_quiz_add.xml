<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quizzes.QuizAddActivity">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/imageViewInstruction"
        android:layout_width="356dp"
        android:layout_height="653dp"
        android:background="@drawable/layout_bg_long"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.496" />

    <EditText
        android:id="@+id/et_quiz_name"
        style="@style/TextViewStyle"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:ems="10"
        android:hint="Quiz Name..."
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewInstruction"
        app:layout_constraintEnd_toEndOf="@+id/imageViewInstruction"
        app:layout_constraintStart_toStartOf="@+id/imageViewInstruction"
        app:layout_constraintTop_toTopOf="@+id/imageViewInstruction"
        app:layout_constraintVertical_bias="0.083" />

    <EditText
        android:id="@+id/et_question"
        style="@style/TextViewStyle"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:ems="10"
        android:hint="Question..."
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewInstruction"
        app:layout_constraintEnd_toEndOf="@+id/et_quiz_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_quiz_name"
        app:layout_constraintTop_toBottomOf="@+id/et_quiz_name"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_choice_a"
        style="@style/TextViewStyle"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:ems="10"
        android:hint="Choice A..."
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewInstruction"
        app:layout_constraintEnd_toEndOf="@+id/et_question"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_question"
        app:layout_constraintTop_toBottomOf="@+id/et_question"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_choice_b"
        style="@style/TextViewStyle"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:ems="10"
        android:hint="Choice B..."
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewInstruction"
        app:layout_constraintEnd_toEndOf="@+id/et_choice_a"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_choice_a"
        app:layout_constraintTop_toBottomOf="@+id/et_choice_a"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_choice_c"
        style="@style/TextViewStyle"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:ems="10"
        android:hint="Choice C..."
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewInstruction"
        app:layout_constraintEnd_toEndOf="@+id/et_choice_b"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_choice_b"
        app:layout_constraintTop_toBottomOf="@+id/et_choice_b"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_choice_d"
        style="@style/TextViewStyle"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:ems="10"
        android:hint="Choice D..."
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewInstruction"
        app:layout_constraintEnd_toEndOf="@+id/et_choice_c"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_choice_c"
        app:layout_constraintTop_toBottomOf="@+id/et_choice_c"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_answer"
        style="@style/TextViewStyle"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:ems="10"
        android:hint="Answer..."
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewInstruction"
        app:layout_constraintEnd_toEndOf="@+id/et_choice_d"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_choice_d"
        app:layout_constraintTop_toBottomOf="@+id/et_choice_d"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonContinue"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewInstruction"
        app:layout_constraintEnd_toEndOf="@+id/et_answer"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/et_answer"
        app:layout_constraintTop_toBottomOf="@+id/et_answer"
        app:layout_constraintVertical_bias="0.285" />


</androidx.constraintlayout.widget.ConstraintLayout>